{% extends 'base.html.twig' %}
{% block body %}
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1></h1>
          </div>
        </div>
      </div>
    </section>
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">
                  Colecciones
                </h3>
              </div>
              <div class="card-body">
                <div class="row mt-4">
                    {% for colection in Colecciones %}
                      <div class="col-md-6">
                          <a href="{{ path('ColectionPdf', { 'id': colection.id }) }}" class="btn btn-secondary" style="width:100%; margin: 5px;"><strong style="color:white; font-size:22px;">{{ colection.Nombre }}</strong></a>
                      </div>
                    {% endfor %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
{% endblock %}